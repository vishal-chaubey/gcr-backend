# GCR Backend Environment Variables
# Copy this file to .env and modify as needed

# API Configuration
GCR_HTTP_ADDR=:8080
REDIS_ADDR=redis:6379
KAFKA_BROKER=kafka:9092

# Redis Configuration
REDIS_PORT=6379

# Zookeeper Configuration
ALLOW_ANONYMOUS_LOGIN=yes

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_LISTENERS=PLAINTEXT://:9092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
ALLOW_PLAINTEXT_LISTENER=yes
KAFKA_CFG_MESSAGE_MAX_BYTES=104857600
KAFKA_CFG_REPLICA_FETCH_MAX_BYTES=104857600
KAFKA_CFG_FETCH_MESSAGE_MAX_BYTES=104857600

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Trino Configuration
TRINO_PORT=8081

# Spark Configuration
SPARK_MODE=master
SPARK_MASTER_WEB_PORT=8082
SPARK_MASTER_RPC_PORT=7077

# Trino Configuration
TRINO_URL=http://trino:8080
TRINO_USER=admin
